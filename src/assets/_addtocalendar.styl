.react-add-to-calendar {
    -webkit-font-smoothing: antialiased;
    text-shadow: 1px 1px 1px rgba(0, 0, 0, .004);
    position: relative;
    display: inline-block;
    z-index: 1;
    &__wrapper {
        zoom: 1;
        cursor: pointer;
    }

    &__button {
        padding: 0.33rem;
        background-color: #f9f9f9;
        border: 1px solid #aab9d4;
        border-radius: 3px;
        color: black;
        font-size: 0.5rem;
        &--light {
            background-color: white;
        }
    }

    &__icon {
        &--right {
            padding-left: 5px;
        }

        &--left {
            padding-right: 5px;
        }
    }

    &__dropdown {
        position: absolute;
        top: 30px;
        left: 5px;
        width: 125%;
        padding: 5px 0 5px 8px;
        box-shadow: 1px 3px 6px rgba(0, 0, 0, .15);
        border: 1px solid #a8a8a8;
        background-color: white;
        text-align: left;
        ul {
            list-style: none;
            margin: 0;
            padding: 0 0 0 0.25rem;
            li {
                a {
                    color: black;
                    text-decoration: none;
                    font-size: 0.5rem;
                    white-space: nowrap;
                    i {
                        padding-right: 10px;
                    }
                }
            }
        }
    }
}
