$blue = #34b6ee
$pink = #ec008c
$yellow = #e9ec00
$orange = #fc5121
$red = #f41c21
$purple = #c724eb

scale = 0 600px 800px 1020px 1260px

body {
  font-family: 'Poppins', sans-serif
  background-color: $yellow
}

a {
  color: $blue
  text-decoration: none
  &:hover {
    text-decoration: none
  }
}

*:focus {
    outline: none
}

svg {
  cursor: pointer
}

.page {
  background: white
  margin: 0 1rem
  padding: 0.5rem 1rem 2rem
}

.fa {
  font-size: 1rem
  transform: translateY(50deg)
  cursor: pointer
  color: $blue
  &:hover {
    color: black
  }
  span {
    display: none
  }
}

.fa-spin {
  color: black
}

.fa-trash {
  color: #aaa
}

.fa.fa-link {
  color: white
  background: $red
  text-align: center
  border-radius: 50%
  font-size: 0.75rem
  width: 1.25rem
  height: 1.25rem
  line-height: 1rem
  margin: 0
  padding: 0.125rem
  border: none
}

.fa.fa-calendar {
  color: $blue
  background: white
  text-align: center
  border-radius: 50%
  font-size: 0.75rem
  width: 1.4rem
  height: 1.4rem
  line-height: 1rem
  margin: 0
  padding: 0.125rem
  border: none
}

.fa-plus-circle {
  color: black
  font-size: 1.33rem
  &:hover {
    color: $pink
  }
}

.fa-minus-circle {
  color: $pink
  font-size: 1.33rem
}

.fa-heart {
  color: $red
}

.fa-globe {
  color: $blue
}

.fa-map-marker {
  color: $orange
}

.fa-times.clear-submit {
  color: black
  position: absolute
  top: 0.25rem
  right: 0.33rem
}

.fa-clock-o {
  color: $pink
}

.btn.facebook {
  background: #3b5998
}

.container {
  max-width: 1100px
  margin: 0 auto
  padding-top: calc(112px + 1rem)
  padding-bottom: 55px
  +mobile(){
    padding-top: calc(65px + 1rem)
  }
  +tablet(){
    padding-top: calc(70px + 1rem)
