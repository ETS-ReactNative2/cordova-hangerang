    color: black
  }
}

.hangs {
  display: flex
  flex-wrap: wrap
  justify-content: flex-start
  align-items: flex-start
  margin: 0
  padding: 0
}

.hang-item-enter {
  opacity: 0.01
}

.hang-item-enter.hang-item-enter-active {
  opacity: 1
  transition: opacity 500ms ease-in
}

.hang-item-leave {
  opacity: 1
}

.hang-item-leave.hang-item-leave-active {
  opacity: 0.01
  transition: opacity 300ms ease-in
}

.hang-item {
  flex: 0 0 auto
  list-style-type: none
  background-color: rgb(237, 237, 237)
  color: black
  margin: 0 0.5rem 1rem
  box-shadow: 0 3px 4px 0 rgba(0,0,0,.14), 0 3px 3px -2px rgba(0,0,0,.12), 0 1px 8px 0 rgba(0,0,0,.2)
  -webkit-transition: 0.5s
  -moz-transition: 0.5s
  -o-transition: 0.5s
  transition: 0.5s
  opacity: 0
  visibility: hidden
  +to-width(5){
    width: calc(33.33% - 1rem)
    min-height: calc(1100px / 4)
  }
  +to-width(4){
    width: calc(50% - 1rem)
    min-height: calc(1100px / 4)
  }
  +to-width(3){
    width: calc(100% - 1rem)
    min-height: calc(100vw - 4rem)
  }
  img {
    width: 100%
    height: auto
  }
  &.show {
    opacity: 1
    visibility: visible
    display: block
  }
  &.hide {
    opacity: 0
    visibility: hidden
    display: none
  }
}

.hang-item-new {
  @extend .hang-item
  opacity: 1
  visibility: visible
  position: relative
  border: 4px solid $blue
  box-sizing: border-box
  overflow: hidden
  +mobile() {
    width: calc(100% - 1rem)
    min-height: calc(100vw - 3rem)
  }
  .hang-item {
    position: absolute
    width: 100%
    height: 100%
    top: 0
    right: 0
    bottom: 0
    left: -0.5rem
  }
}

.hang-detail {
  width: calc(100% - 1rem)
  margin: 0 auto
  width: calc(100% - 1rem)
  height: auto
  +tablet() {
    width: calc(500px - 1rem)
    min-height: calc(1100px / 3.33)
  }
  +desktop() {
    width: calc(50% - 1rem)
    min-height: calc(1100px / 3.33)
  }
  .hang-item {
    +tablet() {
      width: 100%
    }
    +desktop() {
      width: 100%
    }
  }
}

