.add-hang {
  border-radius: 2px
  border-top: 3px solid $red
  box-sizing: border-box
  padding: 1rem
  margin: 0 0.5rem 1rem
  background-color: rgb(237, 237, 237)
  box-shadow: 0 3px 4px 0 rgba(0,0,0,.14), 0 3px 3px -2px rgba(0,0,0,.12), 0 1px 8px 0 rgba(0,0,0,.2)
  width: calc(100% - 1rem)
  -webkit-transition: height 1s
  -moz-transition: height 1s
  -ms-transition: height 1s
  -o-transition: height 1s
  transition: height 1s
  .fa {
    display: inline-block
    text-align: center
    width: 100%
  }
  h3 {
    font-weight: 600
    text-align: center
    margin: 0
  }
  form {
    display: flex
    align-items: center
    justify-content: center
    width: 100%
    flex-direction: column
    margin-top: 1rem
    +desktop() {
      flex-direction: row
      justify-content: space-between
    }
  }
  button {
    margin: 0
    white-space: nowrap
    width: auto
  }
  img {
    border-radius: 50%
  }
}

.add-hang-fixed {
  position: fixed
  bottom: 0
  z-index: 3
  +desktop(){
    position: relative
    width(1100px - 2rem)
  }
  @extend .add-hang
}

.add-hang-wrapper,
.add-msg-wrapper {
  display: flex
  align-items: center
  justify-content: center
  width: 100%
  flex-direction: column
  +desktop() {
    flex-direction: row
    justify-content: space-between
  }
  > div {
    width: 100% !important
    box-sizing: border-box
    margin: 0 0.5rem
    div {
      width: 100% !important
    }
    input {
      width: 100%
    }
  }
}

div.input-datetime {
  > div {
    display: none
  }
  div.input-datetime {
    display: block
    div {
      display: block
    }
  }
}

.add-hang-footer {
  +desktop() {
    width: 15%
  }
}

.add-hang form > .input-datetime {
