}

.hang-chat-item {
  padding: 0 1rem
  display: flex
  align-items: flex-end
  margin-bottom: 1.25rem
  .hang-msg-user {
    margin-bottom: -0.5rem
  }
  .hang-msg {
    position: relative
    border-radius: 0.25rem 0.25rem 0.25rem 0
    margin: 0 0.66rem
    padding: 0.25rem 0.5rem
    background: $blue
    font-size: 0.75rem
    color: white
    max-width: 50%
    &:before {
      content: ''
      position: absolute
      bottom: 0
      left: -10px
      border-top: 10px solid transparent
      border-bottom: 0
      border-right: 10px solid $blue
    }
  }
}

.hang-chat-item.hang-chat-primary {
  flex-direction: row-reverse
  .time-elapsed {
    left: auto
    right: -0.5rem
  }
  .hang-msg {
    background: $pink
    border-radius: 0.25rem 0.25rem 0 0.25rem
    &:before {
      display: none
    }
    &:after {
      content: ''
      position: absolute
      bottom: 0
      right: -10px
      border-top: 10px solid transparent
      border-bottom: 0
      border-left: 10px solid $pink
    }
  }
}

.orange {
  display: block
  margin: 0 auto
  +mobile() {
    width: calc(100% - 1rem)
    min-height: calc(100vw - 2rem)
  }
  +tablet() {
    width: calc(50% - 1rem)
    min-height: calc((100vw / 2) - 2rem)
  }
  +desktop() {
    width: calc(33.33% - 1rem)
    min-height: calc(1100px / 3.33)
  }
  .bubble {
    position: relative
    display: inline-block
    width: 100%
    padding: 1rem
    margin: 0 0 1rem
    border-radius: 1rem
    background: white
    text-align: center
    &:after {
      content: ''
      position: absolute
      width: 0
      height: 0
      bottom: -30px
      right: 40px
      border-left: 20px solid transparent
      border-right: 20px solid transparent
      border-top: 30px solid white
    }
  }
  img {
    width: 100%
    height: auto
  }
}

.user-geolocation {
   position: relative
